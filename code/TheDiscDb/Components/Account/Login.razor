@page "/Account/Login"

@rendermode InteractiveServer

<PageTitle>Login - TheDiscDb</PageTitle>
<HeadContent>
    <meta name="description" content="Log in to TheDiscDb to contribute disc information, manage your submissions, and help build the community database." />
    <link rel="canonical" href="https://thediscdb.com/account/login" />
</HeadContent>

<h1>Login</h1>
<form class="form-horizontal" action="Account/PerformExternalLogin" method="post">
    <div>
        <AntiforgeryToken />
        <input type="hidden" name="ReturnUrl" value="@ReturnUrl" />
        <p>
            @foreach (var provider in externalLogins)
            {
                <p>
                    <button type="submit" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><img src="/@provider.Name-login.png" alt="Log in with @provider.DisplayName" /></button>
                </p>
            }
        </p>
    </div>
</form>

<environment names="Development">
    <button @onclick="TestContributorLogin">Login as test contributor</button>
</environment>